<%- include('partials/header') %>

<div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">Resource Center</h1>
    <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">Download educational materials, brochures, and presentations to help spread awareness about drug prevention.</p>

    <% if(resources.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% resources.forEach(function(resource) { %>
                <div class="bg-white rounded-lg shadow p-6 text-center">
                    <div class="text-teal-500 text-4xl mb-4"><i class="fas fa-file-pdf"></i></div>
                    <h3 class="text-xl font-bold mb-2"><%= resource.title %></h3>
                    <p class="text-gray-600 mb-4 text-sm"><%= resource.description %></p>
                    <a href="<%= resource.file_path %>" class="bg-teal-100 text-teal-700 font-bold py-2 px-4 rounded hover:bg-teal-200" download>
                        Download
                    </a>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="text-center py-12 bg-white rounded shadow">
            <p class="text-xl text-gray-600">No resources uploaded yet.</p>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
